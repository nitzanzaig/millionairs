<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.TipsBotFragment">

    <Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#111E77"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#0FEFDC"
            android:textSize="40sp"
            android:text="@string/possible_subjects"

            />
    </Toolbar>


    <Button
        android:id="@+id/InsurancesButton"
        android:layout_width="155dp"
        android:layout_height="75dp"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_marginTop="415dp"
        android:layout_marginStart="220dp"
        android:text="Insurances"

      />


    <Button
        android:id="@+id/RightsButton"
        android:layout_width="155dp"
        android:layout_height="75dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="165dp"
        android:text="Rights"
        android:textSize="13dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/PensionButton"
        android:layout_width="155dp"
        android:layout_height="75dp"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_marginStart="220dp"
        android:layout_marginTop="165dp"
        android:text="Pension" />

    <Button
        android:id="@+id/CommissionsButton"
        android:layout_width="155dp"
        android:layout_height="75dp"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_marginStart="40dp"
        android:layout_marginTop="290dp"
        android:text="Commissions" />

    <Button
        android:id="@+id/WorkplacerightsButton"
        android:layout_width="155dp"
        android:layout_height="75dp"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_marginStart="220dp"
        android:layout_marginTop="290dp"
        android:text="Work place rights" />

    <Button
        android:id="@+id/CommunicationButton"
        android:layout_width="155dp"
        android:layout_height="75dp"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_marginStart="40dp"
        android:layout_marginTop="414dp"
        android:text="Communication"
 />

</RelativeLayout>