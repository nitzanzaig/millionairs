<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="millionairs.example.millionairs.Fragments.TipsBotFragment">

    <Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#111E77"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#0FEFDC"
            android:textSize="40sp"
            android:text="@string/possible_subjects"

            />
    </Toolbar>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="125dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/bot"
        app:civ_border_color="#B2FFFFFF"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please choose a subject"
        android:layout_marginTop="225dp"
        android:layout_marginStart="125dp"
        android:textSize="15dp"
        android:textColor="#111E77"
        />
    <Button
        android:id="@+id/InsurancesButton"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_marginTop="485dp"
        android:layout_marginStart="220dp"
        android:text="Insurances"

      />


    <Button
        android:id="@+id/RightsButton"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="265dp"
        android:text="Rights"
        android:textSize="13dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/PensionButton"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="265dp"
        android:text="Pension"
        android:textSize="13dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/CommissionsButton"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_marginStart="40dp"
        android:layout_marginTop="375dp"
        android:text="Commissions" />

    <Button
        android:id="@+id/WorkplacerightsButton"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="375dp"
        android:text="Work place rights"
        android:textSize="13dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/CommunicationButton"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="485dp"
        android:text="Communication"
        android:textSize="13dp"
        android:textStyle="bold" />

</RelativeLayout>