<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="0dp"
            android:id="@+id/textView38"
            style="@style/headline"
            android:text="Budget"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1233"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:text="Current Budget is 0"
            android:textColor="#111E77"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1232"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining Amount is 0"
            android:layout_gravity="center"
            android:textColor="#111E77"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home:"
                    android:layout_marginStart="60dp"
                    android:layout_gravity="left"
                    android:textColor="#111E77"
                    android:textSize="20sp" />

                <ProgressBar
                    android:id="@+id/progressBarHome"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="169dp"
                    android:layout_height="104dp"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="left"
                    android:indeterminateTint="#BD2A2A"
                    android:progressBackgroundTint="#0FEFDC" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewGroceries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Groceries:"
                    android:layout_marginEnd="70dp"
                    android:layout_gravity="right"
                    android:textColor="#111E77"
                    android:textSize="20sp" />

                <ProgressBar
                    android:id="@+id/progressBarGroceries"
                    style="?android:attr/progressBarStyle"
                    android:layout_gravity="right"
                    android:layout_width="169dp"
                    android:layout_height="104dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="30dp"
                    android:indeterminateTint="#E89E27"
                    android:progressBackgroundTint="#0FEFDC" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health:"
                    android:layout_marginStart="60dp"
                    android:layout_gravity="left"
                    android:textColor="#111E77"
                    android:textSize="20sp" />

                <ProgressBar
                    android:id="@+id/progressBarHealth"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="169dp"
                    android:layout_height="104dp"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="left"
                    android:indeterminateTint="#BFF455D2"
                    android:progressBackgroundTint="#0FEFDC" />

                <TextView
                    android:id="@+id/textViewLeisure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="60dp"
                    android:text="Leisure:"
                    android:textColor="#111E77"
                    android:textSize="20sp" />

                <ProgressBar
                    android:id="@+id/progressBarLeisure"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="169dp"
                    android:layout_height="104dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="20dp"
                    android:indeterminateTint="#D57D1AB8"
                    android:progressBackgroundTint="#0FEFDC" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewEducation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Education:"
                    android:layout_marginEnd="70dp"
                    android:layout_gravity="right"
                    android:textColor="#111E77"
                    android:textSize="20sp" />

                <ProgressBar
                    android:id="@+id/progressBarEducation"
                    style="?android:attr/progressBarStyle"
                    android:layout_gravity="right"
                    android:layout_width="169dp"
                    android:layout_height="104dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="30dp"
                    android:indeterminateTint="#90C4E3"
                    android:progressBackgroundTint="#0FEFDC" />

                <TextView
                    android:id="@+id/textViewTransportation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginEnd="40dp"
                    android:text="Transportation:"
                    android:textColor="#111E77"
                    android:textSize="20sp" />

                <ProgressBar
                    android:id="@+id/progressBarTransportation"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="169dp"
                    android:layout_height="104dp"
                    android:layout_gravity="right"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="30dp"
                    android:indeterminateTint="#7EB359"
                    android:progressBackgroundTint="#7EB359" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>





