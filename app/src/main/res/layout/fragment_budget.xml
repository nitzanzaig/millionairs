<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home:"
                    android:layout_marginStart="60dp"
                    android:layout_gravity="left"
                    android:textColor="#111E77"
                    android:textSize="20sp" />

                <ProgressBar
                    android:id="@+id/progressBarHome"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="169dp"
                    android:layout_height="104dp"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="left"
                    android:progressBackgroundTint="#0FEFDC" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewGroceries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Groceries:"
                    android:layout_marginEnd="60dp"
                    android:layout_gravity="right"
                    android:textColor="#111E77"
                    android:textSize="20sp" />

                <ProgressBar
                    android:id="@+id/progressBarGroceries"
                    style="?android:attr/progressBarStyle"
                    android:layout_gravity="right"
                    android:layout_width="169dp"
                    android:layout_height="104dp"
                    android:layout_marginStart="20dp"
                    android:progressBackgroundTint="#0FEFDC" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health:"
                    android:layout_marginStart="60dp"
                    android:layout_gravity="left"
                    android:textColor="#111E77"
                    android:textSize="20sp" />

                <ProgressBar
                    android:id="@+id/progressBarHealth"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="169dp"
                    android:layout_height="104dp"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="left"
                    android:progressBackgroundTint="#0FEFDC" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewEducation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Education:"
                    android:layout_marginEnd="60dp"
                    android:layout_gravity="right"
                    android:textColor="#111E77"
                    android:textSize="20sp" />

                <ProgressBar
                    android:id="@+id/progressBarEducation"
                    style="?android:attr/progressBarStyle"
                    android:layout_gravity="right"
                    android:layout_width="169dp"
                    android:layout_height="104dp"
                    android:layout_marginStart="20dp"
                    android:progressBackgroundTint="#0FEFDC" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>





