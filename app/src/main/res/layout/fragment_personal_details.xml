<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="414dp"
                android:layout_height="90dp"
                android:layout_marginBottom="20dp"
                android:background="#111E77"
                android:gravity="center"
                android:text="Personal Details"
                android:textColor="#0fefDC"
                android:textSize="40sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="30dp"
                    android:text="Age"
                    android:textColor="#111e77"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ageEditTextPersonal"
                    android:layout_width="69dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="300dp"
                    android:layout_marginBottom="27dp"
                    android:ems="10"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView02"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="30dp"
                    android:text="Gender"
                    android:textColor="#111e77"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/genderSpinner"
                    android:layout_width="152dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginEnd="243dp"
                    android:layout_marginBottom="27dp"
                    android:textColor="#111e77" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="30dp"
                    android:text="Household Size"
                    android:textColor="#111e77"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/householdEditTextPersonal"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="300dp"
                    android:layout_marginBottom="27dp"
                    android:ems="10"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="30dp"
                    android:text="Living Area"
                    android:textColor="#111e77"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/livingAreaSpinner"
                    android:layout_width="152dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginEnd="243dp"
                    android:layout_marginBottom="27dp" />
            </LinearLayout>

            <Button
                android:id="@+id/submitButtonExpenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:text="Submit"
                android:textColor="@color/white" />


        </LinearLayout>
    </LinearLayout>


</ScrollView>